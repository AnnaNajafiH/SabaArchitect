{
  "name": "sstudio-server",
  "version": "1.0.0",
  "description": "Backend API for SabaArchitect - Architecture Web Application",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "prebuild": "npm install && npm install typescript @types/node --include=dev",
    "build": "tsc --build tsconfig.prod.json",
    "postbuild": "mkdir -p dist/uploads && echo Build completed successfully",
    "start": "node dist/server.js",
    "deploy": "npm run build && npm run start",
    "test": "jest",
    "test-server": "npx ts-node src/test-server.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "seed": "npx ts-node src/utils/seedDatabase.ts",
    "seed:projects": "npx ts-node src/utils/seedProjects.ts",
    "seed:build": "npm run build && node dist/utils/seedDatabase.js"
  },
  "keywords": [
    "architecture",
    "nodejs",
    "express",
    "typescript",
    "api"
  ],
  "author": "SabaArchitect",
  "dependencies": {
    "@types/cookie-parser": "1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/node": "20.19.7",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.4",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  }
}
